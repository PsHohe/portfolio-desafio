---
interface Props {
  title: string;
  description: string;
  technologies: string[];
  github?: string;
  demo?: string;
  appstore?: string;
  playstore?: string;
}

const { title, description, technologies, github, demo, appstore, playstore } = Astro.props;
---

<div class="project-card">
  <div class="project-header">
    <span class="prompt">user@portfolio:~/projects$</span>
    <span class="cmd-text">cat {title.toLowerCase().replaceAll(' ', '-')}.md</span>
  </div>

  <div class="project-content">
    <h3 class="project-title"># {title}</h3>
    <p class="project-description">{description}</p>

    <div class="project-tech">
      <span class="tech-label">## Technologies:</span>
      <div class="tech-list">
        {technologies.map(tech => <span class="tech-tag">{tech}</span>)}
      </div>
    </div>

    <div class="project-links">
      {github && (
        <a href={github} target="_blank" rel="noopener noreferrer" class="project-link">
          [Repositorio en GitHub]
        </a>
      )}
      {demo && (
        <a href={demo} target="_blank" rel="noopener noreferrer" class="project-link">
          [Live Demo]
        </a>
      )}
      {appstore && (
        <a href={appstore} target="_blank" rel="noopener noreferrer" class="project-link app-store-link">
          <span class="store-icon">üçé</span> [App Store]
        </a>
      )}
      {playstore && (
        <a href={playstore} target="_blank" rel="noopener noreferrer" class="project-link play-store-link">
          <span class="store-icon">ü§ñ</span> [Play Store]
        </a>
      )}
    </div>
  </div>
</div>

<style>
  .project-card {
    border: 1px solid #444;
    border-radius: 4px;
    margin-bottom: 1.5rem;
    overflow: hidden;
  }

  .project-header {
    background-color: #2a2a2a;
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
  }

  .prompt {
    color: var(--terminal-prompt);
  }

  .cmd-text {
    color: var(--terminal-command);
    margin-left: 0.5rem;
  }

  .project-content {
    padding: 1rem;
  }

  .project-title {
    color: var(--terminal-green);
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .project-description {
    margin-bottom: 1rem;
  }

  .tech-label {
    color: var(--terminal-green);
    display: block;
    margin-bottom: 0.5rem;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-tag {
    background-color: #333;
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-size: 0.9rem;
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-top: 1rem;
  }

  .project-link {
    color: var(--terminal-text);
    text-decoration: none;
    background-color: #333;
    padding: 0.3rem 0.7rem;
    border: 1px solid #555;
    transition: all 0.2s;
  }

  .project-link:hover {
    background-color: #444;
    border-color: var(--terminal-cyan);
    color: var(--terminal-cyan);
  }

  .app-store-link {
    border-color: #0071e3;
    background-color: rgba(0, 113, 227, 0.1);
  }

  .app-store-link:hover {
    background-color: rgba(0, 113, 227, 0.2);
    border-color: #0071e3;
    color: #ffffff;
  }

  .play-store-link {
    border-color: #01875f;
    background-color: rgba(1, 135, 95, 0.1);
  }

  .play-store-link:hover {
    background-color: rgba(1, 135, 95, 0.2);
    border-color: #01875f;
    color: #ffffff;
  }

  .store-icon {
    font-size: 0.9rem;
    margin-right: 0.2rem;
  }
</style>
