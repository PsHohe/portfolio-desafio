---
import "../styles/global.css";
import "../styles/nav-buttons.css";
import "../styles/command-input.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=JetBrains+Mono:wght@100;200;300;400;500;600;700&family=Source+Code+Pro:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style>
      /* Base terminal styling */
      :root {
        --terminal-bg: #1e1e1e;
        --terminal-text: #f0f0f0;
        --terminal-green: #0f0;
        --terminal-prompt: #0f0;
        --terminal-command: #f0f0f0;
        --terminal-output: #cccccc;
        --terminal-cyan: #00FFFF;
        --terminal-yellow: #FFFF00;
        --terminal-link: #00FFFF;
        --font-mono: 'JetBrains Mono', 'Fira Code', 'Source Code Pro', 'Courier New', monospace;
      }

      body {
        background-color: var(--terminal-bg);
        color: var(--terminal-text);
        font-family: var(--font-mono);
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }

      a {
        color: var(--terminal-link);
        text-decoration: none;
        transition: color 0.2s, text-decoration 0.2s;
      }

      a:hover {
        text-decoration: underline;
      }

      .terminal {
        max-width: 900px;
        margin: 2rem auto;
        padding: 1.5rem;
        border: 1px solid #444;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        overflow: auto;
      }

      .terminal-header {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #444;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
      }

      .terminal-title {
        font-weight: bold;
        color: var(--terminal-text);
      }

      .terminal-controls {
        display: flex;
        gap: 0.5rem;
      }

      .terminal-control {
        width: 12px;
        height: 12px;
        border-radius: 50%;
      }

      .terminal-control.close { background-color: #ff5f56; }
      .terminal-control.minimize { background-color: #ffbd2e; }
      .terminal-control.maximize { background-color: #27c93f; }

      .command-prompt {
        color: var(--terminal-prompt);
        margin-bottom: 1rem;
      }

      .command-prompt::before {
        content: "$ ";
      }

      /* Navigation styles moved to nav-buttons.css */

      .ascii-art {
        font-family: var(--font-mono);
        white-space: pre;
        line-height: 1.2;
        color: var(--terminal-green);
        margin-bottom: 1.5rem;
      }
    </style>
  </head>
  <body>
    <div class="terminal">
      <div class="terminal-header">
        <div class="terminal-title">terminal@sandrino-portfolio</div>
        <div class="terminal-controls">
          <div class="terminal-control close"></div>
          <div class="terminal-control minimize"></div>
          <div class="terminal-control maximize"></div>
        </div>
      </div>

      <slot />
    </div>
  </body>
</html>
